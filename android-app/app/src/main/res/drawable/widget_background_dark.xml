<?xml version="1.0" encoding="utf-8"?>
<!-- A7.2: Основной фон виджета для тёмной темы -->
<!-- A7.3: Тени - Dark: rgba(0,0,0,0.50), blur 22dp -->
<!-- Dark: #0C0F25, radius 24dp, stroke #1A1F3A -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- A7.3: Тень (22dp blur, 50% opacity) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- A7.3: rgba(0,0,0,0.50) = 50% opacity -->
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Фон с обводкой -->
    <!-- A7.3: blur 22dp -->
    <item
        android:bottom="22dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#0C0F25" /> <!-- A7.2: Dark: #0C0F25 -->
            <corners android:radius="24dp" /> <!-- A7.2: radius 24dp -->
            <stroke
                android:width="1dp"
                android:color="#1A1F3A" /> <!-- A7.2: stroke #1A1F3A -->
        </shape>
    </item>
</layer-list>

